<resources xmlns="https://api-platform.com/schema/metadata"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://api-platform.com/schema/metadata
           https://api-platform.com/schema/metadata/metadata-2.0.xsd">
    <resource class="Eps\Fazah\Core\Model\Catalogue">
        <attribute name="filters">
            <attribute>catalogue_filter</attribute>
        </attribute>
        <collectionOperation name="get">
            <attribute name="method">GET</attribute>
        </collectionOperation>
        <collectionOperation name="create_catalogue">
            <attribute name="route_name">fazah.catalogue.create</attribute>
        </collectionOperation>

        <itemOperation name="get">
            <attribute name="method">GET</attribute>
        </itemOperation>
        <itemOperation name="edit_catalogue">
            <attribute name="route_name">fazah.catalogue.edit</attribute>
        </itemOperation>
        <itemOperation name="change_catalogue_state">
            <attribute name="route_name">fazah.catalogue.change_state</attribute>
        </itemOperation>
        <itemOperation name="remove_catalogue">
            <attribute name="route_name">fazah.catalogue.delete</attribute>
        </itemOperation>
    </resource>
</resources>
