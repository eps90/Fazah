<resources xmlns="https://api-platform.com/schema/metadata"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="https://api-platform.com/schema/metadata
           https://api-platform.com/schema/metadata/metadata-2.0.xsd">
    <resource class="Eps\Fazah\Core\Model\Project">
        <attribute name="filters">
            <attribute>project_filter</attribute>
        </attribute>
        <collectionOperations>
            <collectionOperation name="get">
                <attribute name="method">GET</attribute>
            </collectionOperation>
            <collectionOperation name="create_project">
                <attribute name="route_name">fazah.project.create</attribute>
            </collectionOperation>
        </collectionOperations>

        <itemOperations>
            <itemOperation name="get">
                <attribute name="method">GET</attribute>
            </itemOperation>
            <itemOperation name="edit_project">
                <attribute name="route_name">fazah.project.edit</attribute>
            </itemOperation>
            <itemOperation name="change_project_state">
                <attribute name="route_name">fazah.project.change_state</attribute>
            </itemOperation>
            <itemOperation name="delete_project">
                <attribute name="route_name">fazah.project.delete</attribute>
            </itemOperation>
        </itemOperations>
    </resource>
</resources>
