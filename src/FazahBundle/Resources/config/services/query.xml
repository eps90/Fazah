<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="fazah.query.criteria_matcher"
                 class="Eps\Fazah\Core\Repository\Query\Impl\DoctrineCriteriaMatcher">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <service id="fazah.query.builder.select_project"
                 class="Eps\Fazah\Core\Repository\Query\Builder\SelectProjects"
                 public="false">
            <tag name="fazah.condition_builder" priority="255" />
        </service>

        <service id="fazah.query.builder.filter.enabled"
                 class="Eps\Fazah\Core\Repository\Query\Builder\FilterByEnabled"
                 public="false">
            <tag name="fazah.condition_builder" priority="255" />
        </service>

        <service id="fazah.query.builder.filter.phrase"
                 class="Eps\Fazah\Core\Repository\Query\Builder\FilterByPhrase"
                 public="false">
            <tag name="fazah.condition_builder" priority="255" />
        </service>

        <service id="fazah.query.builder.sort.date_default"
                 class="Eps\Fazah\Core\Repository\Query\Builder\SortByDefaultDates"
                 public="false">
            <tag name="fazah.condition_builder" priority="255" />
        </service>

        <service id="fazah.query.builder.sort.date"
                 class="Eps\Fazah\Core\Repository\Query\Builder\SortByDate"
                 public="false">
            <tag name="fazah.condition_builder" priority="255" />
        </service>
    </services>
</container>
