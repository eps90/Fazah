<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="fazah.command.create_project"
                 class="Eps\Fazah\Core\UseCase\Command\Handler\CreateProjectHandler"
                 lazy="true">
            <argument type="service" id="fazah.repository.project"/>
            <tag name="tactician.handler" command="Eps\Fazah\Core\UseCase\Command\CreateProject" />
        </service>

        <service id="fazah.command.create_catalogue"
                 class="Eps\Fazah\Core\UseCase\Command\Handler\CreateCatalogueHandler"
                 lazy="true">
            <argument type="service" id="fazah.repository.catalogue" />
            <tag name="tactician.handler" command="Eps\Fazah\Core\UseCase\Command\CreateCatalogue" />
        </service>

        <service id="fazah.command.change_project_state"
                 class="Eps\Fazah\Core\UseCase\Command\Handler\ChangeProjectStateHandler"
                 lazy="true">
            <argument type="service" id="fazah.repository.project" />
            <tag name="tactician.handler" command="Eps\Fazah\Core\UseCase\Command\ChangeProjectState" />
        </service>

        <service id="fazah.command.change_catalogue_state"
                 class="Eps\Fazah\Core\UseCase\Command\Handler\ChangeCatalogueStateHandler"
                 lazy="true">
            <argument type="service" id="fazah.repository.catalogue"/>
            <tag name="tactician.handler" command="Eps\Fazah\Core\UseCase\Command\ChangeCatalogueState" />
        </service>

        <service id="fazah.command.change_message_state"
                 class="Eps\Fazah\Core\UseCase\Command\Handler\ChangeMessageStateHandler"
                 lazy="true">
            <argument type="service" id="fazah.repository.message" />
            <tag name="tactician.handler" command="Eps\Fazah\Core\UseCase\Command\ChangeMessageState" />
        </service>

        <service id="fazah.command.add_message"
                 class="Eps\Fazah\Core\UseCase\Command\Handler\AddMessageHandler"
                 lazy="true">
            <argument type="service" id="fazah.repository.message"/>
            <argument type="service" id="fazah.repository.catalogue"/>
            <argument type="service" id="fazah.repository.project"/>
            <tag name="tactician.handler" command="Eps\Fazah\Core\UseCase\Command\AddMessage" />
        </service>

        <service id="fazah.command.edit_project"
                 class="Eps\Fazah\Core\UseCase\Command\Handler\EditProjectHandler"
                 lazy="true">
            <argument type="service" id="fazah.repository.project"/>
            <tag name="tactician.handler" command="Eps\Fazah\Core\UseCase\Command\EditProject" />
        </service>

        <service id="fazah.command.edit_catalogue"
                 class="Eps\Fazah\Core\UseCase\Command\Handler\EditCatalogueHandler"
                 lazy="true">
            <argument type="service" id="fazah.repository.catalogue" />
            <tag name="tactician.handler" command="Eps\Fazah\Core\UseCase\Command\EditCatalogue" />
        </service>

        <service id="fazah.command.edit_message"
                 class="Eps\Fazah\Core\UseCase\Command\Handler\EditMessageHandler"
                 lazy="true">
            <argument type="service" id="fazah.repository.message" />
            <tag name="tactician.handler" command="Eps\Fazah\Core\UseCase\Command\EditMessage" />
        </service>
    </services>
</container>
